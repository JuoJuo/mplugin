{
  "manifest_version": 2,
  "name": "Request-free",
  "description": "梭哈，全梭哈！赢了会所嫩模，输了下海干活儿",
  "version": "0.0.1",
  "options_page": "options/index.html",
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
